<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.coursephototidy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tothemoon.activity.LogIn"
            android:launchMode="singleTask"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.tothemoon.activity.Main"
            	android:launchMode="singleTask"
				android:label="@string/app_name">
		</activity>
		<activity android:name="com.tothemoon.activity.PhotoPreview"
		    	android:launchMode="singleTask"
				android:label="@string/app_name">
		</activity>
		<activity android:name="com.example.testalbums.MainActivity"
		    	android:launchMode="singleTask"
				android:label="@string/app_name">
		</activity>
    </application>
	<!-- 授权访问网络 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 授权访问SD卡 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
</manifest>
